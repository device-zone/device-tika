#!/bin/bash

if [ $# -eq 2 ]; then

  instance="${1}"
  line="${2}"

  if test ! -f "$line/port.txt"; then
    exit 0;
  fi
  port=$(head -n 1 "$line/port.txt")


  cat >> "tika2-${instance}" <<- EOF
# Generated by $0 on `date`
# DO NOT MODIFY THIS FILE - it will be overwritten on server restart.
#

TIKA_OPTS="--id tika2-${instance} --noFork --port ${port}"
JAVA_OPTS=""

EOF

  install -m 640 "tika2-${instance}" "/etc/sysconfig/tika2-${instance}"

fi

